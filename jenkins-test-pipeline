pipeline {
  agent any
  stages {
    stage ("TEST") {
      parallel {
        stage ("1") {
          steps {
            input {
              message "waiting for Input"
              id "WAIT"
              ok "go on"
            }
          }
        }
        stage ("2") {
          steps {
            echo "Test 2"
          }
        }
        stage ("3") {
          steps {
            sh "echo Hello"
          }
        }
      }
    }
  }
}     

pipeline {
  agent any
  
  stages {
    stage ("TEST") {
      parallel {
        stage ("1") {
          environment {
	    def myWaitName="Hugo"
          }
          input {
            message "should we continue, ${myWaitName}?"
            id "WAIT-${myWaitName}"
          }
          steps {
            echo "continue"
          }
        }
        stage ("2") {
          steps {
            echo "Test 2"
          }
        }
        stage ("3") {
          steps {
            sh "echo Hello"
          }
        }
      }
    }
  }
}     
